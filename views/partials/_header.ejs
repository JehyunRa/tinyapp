<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/u">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/u">My URLs</a>
        <a class="nav-item nav-link" href="/u/new">Create New URL</a>
      </div>
    </div>
  <div class="form-group mb-2">
      <%if (username === undefined) { %>
      <form class="form-inline" action="/login" method="POST">
        <label for="unsername" style="margin: 0.5em 0.5em 0 0">Username:</label>
        <input class="form-control" type="text" name="username" style="width: 150px; margin: 0.6em 0.5em 0 0">
        <button type="submit" class="btn btn-primary" style="margin-top: 0.5em">sign up</button>
      </form>
      <% } else { %>
      <form class="form-inline" action="/logout" method="POST">
        <label for="unsername" style="margin: 0.5em 0.5em 0 0"><%= username %></label>
        <button type="submit" class="btn btn-primary" style="margin-top: 0.5em">logout</button>
      </form>
      <% } %>
    </div>
  </nav>
</header>